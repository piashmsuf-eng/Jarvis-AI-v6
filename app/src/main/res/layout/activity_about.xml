<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0F"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="24dp">

        <!-- Back button -->
        <TextView
            android:id="@+id/btnAboutBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="← Back"
            android:textColor="#00E5FF"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:layout_gravity="start"
            android:layout_marginBottom="16dp" />

        <!-- Arc Reactor -->
        <ImageView
            android:id="@+id/ivAboutReactor"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/jarvis_circle_pulse"
            android:layout_marginBottom="16dp" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MAYA AI"
            android:textColor="#00E5FF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.2"
            android:shadowColor="#0091EA"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="20" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your loving AI companion"
            android:textColor="#7A8899"
            android:textSize="13sp"
            android:fontFamily="monospace"
            android:layout_marginTop="4dp" />

        <!-- Version -->
        <TextView
            android:id="@+id/tvAboutVersion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v6.0.0"
            android:textColor="#FF6D00"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Divider -->
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#1E3A5F"
            android:layout_marginVertical="20dp" />

        <!-- Developer -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DEVELOPED &amp; MODDED BY"
            android:textColor="#7A8899"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:letterSpacing="0.3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PIASH"
            android:textColor="#00E5FF"
            android:textSize="28sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.15"
            android:layout_marginTop="4dp"
            android:shadowColor="#0091EA"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowRadius="15" />

        <!-- Facebook link -->
        <TextView
            android:id="@+id/btnFacebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="fb.com/piashmsuf"
            android:textColor="#1877F2"
            android:textSize="14sp"
            android:fontFamily="monospace"
            android:padding="8dp"
            android:layout_marginTop="8dp"
            android:textStyle="bold" />

        <!-- Divider -->
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#1E3A5F"
            android:layout_marginVertical="20dp" />

        <!-- Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="FEATURES"
            android:textColor="#00E5FF"
            android:textSize="12sp"
            android:textStyle="bold"
            android:fontFamily="monospace"
            android:letterSpacing="0.3"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#C0C8D0"
            android:textSize="12sp"
            android:fontFamily="monospace"
            android:lineSpacingMultiplier="1.6"
            android:text="▸ Voice AI Assistant (Bangla/English/Hindi)\n▸ Continuous listen → think → speak loop\n▸ Instant 'OK Boss shunchi' response\n▸ Iron Man arc reactor UI\n▸ Persistent AI memory (SQLite)\n▸ Full phone automation\n▸ 25+ app control\n▸ SMS read/send + Contacts + Calls\n▸ Screen reading (Accessibility)\n▸ Root + Shell + Termux execution\n▸ Quick commands (J1-J9)\n▸ Shake to activate\n▸ Task scheduler\n▸ Battery saver mode\n▸ Conversation export\n▸ Multi-provider LLM (Groq/OpenRouter/Gemini/Claude/FreedomGPT)\n▸ Cartesia + Android TTS\n▸ Wake word: 'Hey Jarvis'\n▸ Theme customization (5 presets)\n▸ Smart AI behaviors\n▸ Daily briefing\n▸ Background persistence\n▸ Crash-proof Accessibility Service" />

        <!-- Divider -->
        <View
            android:layout_width="200dp"
            android:layout_height="1dp"
            android:background="#1E3A5F"
            android:layout_marginVertical="20dp" />

        <!-- Credits -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#5A6577"
            android:textSize="10sp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:lineSpacingMultiplier="1.5"
            android:text="Powered by: OpenRouter • Groq • Gemini • Claude • FreedomGPT\nVoice: Cartesia TTS • Android TTS\nWake Word: Picovoice Porcupine\n\n© 2024-2026 Piash. All rights reserved.\nMAYA AI — Like a caring friend, always in your pocket." />

        <View
            android:layout_width="1dp"
            android:layout_height="40dp" />

    </LinearLayout>
</ScrollView>
