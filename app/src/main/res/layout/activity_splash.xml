<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0F">

    <!-- Arc Reactor Circle -->
    <ImageView
        android:id="@+id/ivSplashCircle"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:src="@drawable/jarvis_circle_pulse"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="0.35" />

    <!-- JARVIS AI Title -->
    <TextView
        android:id="@+id/tvSplashTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JARVIS AI"
        android:textColor="#00E5FF"
        android:textSize="36sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.2"
        android:shadowColor="#0091EA"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="20"
        app:layout_constraintTop_toBottomOf="@id/ivSplashCircle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <!-- modby piash -->
    <TextView
        android:id="@+id/tvSplashModby"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="modby piash"
        android:textColor="#7A8899"
        android:textSize="12sp"
        android:fontFamily="monospace"
        android:letterSpacing="0.3"
        app:layout_constraintTop_toBottomOf="@id/tvSplashTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Boss"
        android:textColor="#00E5FF"
        android:textSize="16sp"
        android:fontFamily="monospace"
        android:alpha="0"
        app:layout_constraintTop_toBottomOf="@id/tvSplashModby"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Boot status text -->
    <TextView
        android:id="@+id/tvSplashStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Initializing systems..."
        android:textColor="#00E5FF"
        android:textSize="11sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toTopOf="@id/splashProgress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="12dp" />

    <!-- Progress bar -->
    <ProgressBar
        android:id="@+id/splashProgress"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="200dp"
        android:layout_height="2dp"
        android:indeterminate="true"
        android:indeterminateTint="#00E5FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="80dp" />

    <!-- Version -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="v6.0 | fb.com/piashmsuf"
        android:textColor="#3A4555"
        android:textSize="10sp"
        android:fontFamily="monospace"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="24dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
