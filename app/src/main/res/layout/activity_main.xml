<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0A0F"
    tools:context=".ui.main.MainActivity">

    <!-- ============================================================ -->
    <!--  TOP BAR — Maya AI branding with glow title                 -->
    <!-- ============================================================ -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="14dp"
        android:gravity="center_vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Glow title — shadow layer simulates glow -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MAYA AI"
                android:textColor="#00E5FF"
                android:textSize="28sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:letterSpacing="0.2"
                android:shadowColor="#00E5FF"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="modby piash"
                    android:textColor="#4A5568"
                    android:textSize="10sp"
                    android:fontFamily="monospace" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="  v6.0"
                    android:textColor="#1E3A5F"
                    android:textSize="10sp"
                    android:fontFamily="monospace"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnAbout"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="About"
            app:tint="#7A8899"
            android:layout_marginEnd="4dp" />

        <ImageButton
            android:id="@+id/btnSettings"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_menu_preferences"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Settings"
            app:tint="#00E5FF" />
    </LinearLayout>

    <!-- ============================================================ -->
    <!--  STATUS CARD — Glassmorphism panel                            -->
    <!-- ============================================================ -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/statusCard"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="2dp"
        app:cardBackgroundColor="#1A1A2E"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:strokeWidth="1dp"
        app:strokeColor="#1E3A5F"
        app:layout_constraintTop_toBottomOf="@id/topBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="14dp">

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Inactive"
                android:textColor="#FF5252"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="monospace"
                android:shadowColor="#FF5252"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="10" />

            <TextView
                android:id="@+id/tvProvider"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Provider: Not configured"
                android:textColor="#7A8899"
                android:textSize="11sp"
                android:fontFamily="monospace" />

            <TextView
                android:id="@+id/tvAccessibility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:text="Notifications: OFF"
                android:textColor="#FF5252"
                android:textSize="11sp"
                android:fontFamily="monospace" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ============================================================ -->
    <!--  ARC REACTOR — Center pulse circle (Maya core)              -->
    <!-- ============================================================ -->

    <!-- Background glow layer (larger, softer, slower pulse) -->
    <ImageView
        android:id="@+id/arcReactorGlow"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:src="@drawable/jarvis_glow_bg"
        android:scaleType="centerInside"
        android:alpha="0.5"
        app:layout_constraintTop_toBottomOf="@id/statusCard"
        app:layout_constraintBottom_toTopOf="@id/conversationContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Main arc reactor circle -->
    <ImageView
        android:id="@+id/arcReactorCircle"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/jarvis_circle_pulse"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="@id/arcReactorGlow"
        app:layout_constraintBottom_toBottomOf="@id/arcReactorGlow"
        app:layout_constraintStart_toStartOf="@id/arcReactorGlow"
        app:layout_constraintEnd_toEndOf="@id/arcReactorGlow" />

    <!-- State label under the reactor -->
    <TextView
        android:id="@+id/tvReactorState"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OFFLINE"
        android:textColor="#FF5252"
        android:textSize="12sp"
        android:textStyle="bold"
        android:fontFamily="monospace"
        android:letterSpacing="0.3"
        android:shadowColor="#FF5252"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/arcReactorGlow"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ============================================================ -->
    <!--  CONVERSATION LOG — translucent scrollable area               -->
    <!-- ============================================================ -->
    <FrameLayout
        android:id="@+id/conversationContainer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/conversation_bg"
        android:padding="10dp"
        app:layout_constraintTop_toBottomOf="@id/tvReactorState"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@android:color/darker_gray"
            android:fadeScrollbars="true">

            <TextView
                android:id="@+id/tvConversation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#C0D0E0"
                android:textSize="12sp"
                android:fontFamily="monospace"
                android:lineSpacingMultiplier="1.4"
                android:text="" />
        </ScrollView>
    </FrameLayout>

    <!-- ============================================================ -->
    <!--  BOTTOM BAR — Input + Activate button                         -->
    <!-- ============================================================ -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp"
        android:paddingTop="10dp"
        android:paddingBottom="14dp"
        android:background="#12121A"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Thin accent line separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#1E3A5F"
            android:layout_marginBottom="10dp" />

        <!-- Text input row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etInput"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:hint="Type koren (optional)..."
                android:textColor="#E0E8F0"
                android:textColorHint="#4A5568"
                android:background="@drawable/input_field_bg"
                android:paddingHorizontal="16dp"
                android:textSize="13sp"
                android:fontFamily="monospace"
                android:singleLine="true"
                android:imeOptions="actionSend" />

            <ImageButton
                android:id="@+id/btnSend"
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:layout_marginStart="10dp"
                android:src="@android:drawable/ic_menu_send"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Send"
                app:tint="#00E5FF" />
        </LinearLayout>

        <!-- THE BIG BUTTON — Maya activate with glow -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnActivate"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="ACTIVATE MAYA"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#0A0A0F"
            android:letterSpacing="0.15"
            android:fontFamily="monospace"
            app:backgroundTint="#00E5FF"
            app:cornerRadius="16dp"
            app:elevation="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
